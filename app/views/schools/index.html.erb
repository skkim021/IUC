<h1>Listing Schools</h1>

<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
  <%= form_tag schools_path, :method => 'get' do %>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>
    <p class="search">
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %>
  <br/>
</div>

<div clas="table-responsive col-xs-12 col-sm-12 col-md-12 col-lg-12">
  <table class="table table-hover" width="100%">
    <thead>
      <tr>
        <th><%= sortable "name" %></th>
        <th><%= sortable "email" %></th>
        <th><%= sortable "password" %></th> 
        <th><%= sortable "picture" %></th>
        <th><%= sortable "location" %></th>
        <th><%= sortable "tips" %></th>
        <th><%= sortable "tuition" %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @schools.each do |school| %>
        <tr>
          <td><%= school.name %></td>
          <td><%= school.email %></td>
          <td><%= school.password %></td>
          <td><%= school.picture %></td>
          <td><%= school.location %></td>
          <td><%= school.tips %></td>
          <td><%= school.tuition %></td>
          <td><%= link_to 'Show', school %></td>
          <td><%= link_to 'Edit', edit_school_path(school) %></td>
          <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New School', new_school_path, class: "btn btn-default" %>
  